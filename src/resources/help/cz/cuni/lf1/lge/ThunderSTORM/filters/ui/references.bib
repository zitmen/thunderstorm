keywords = {Algorithms,Computer Simulation,Computer-Assisted,Fluorescence,Fluorescence: methods,Hep G2 Cells,Humans,Image Processing,Imaging,Light,Localization microscopy,Microscopy,Microscopy: methods,Mitochondria,Mitochondria: metabolism,Optics and Photonics,Reproducibility of Results,Stochastic Processes,Three-Dimensional,Three-Dimensional: methods},
month = aug,
number = {16},
pages = {15009--19},
pmid = {21934862},
publisher = {OSA},
shorttitle = {Opt. Express},
title = {{Sample drift correction in 3D fluorescence photoactivation localization microscopy.}},
