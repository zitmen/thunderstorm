pages = {2775--83},
pmid = {11964263},
publisher = {Elsevier},
title = {{Precise nanometer localization analysis for individual fluorescent probes.}},
url = {http://www.cell.com/biophysj/fulltext/S0006-3495(02)75618-X},
volume = {82},
year = {2002}
}

@article{Quan2010,
